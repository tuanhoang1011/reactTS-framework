{
  "workbench.colorTheme": "Default Dark+",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // format import
  "editor.codeActionsOnSave": {
    "source.removeUnusedImports": true
  },

  // common
  "security.workspace.trust.untrustedFiles": "open",
  "editor.formatOnSave": true,
  "editor.codeLens": true,
  "diffEditor.codeLens": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.decorations.colors": false,
  "explorer.compactFolders": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "search.exclude": {
    "**/.angular": true,
    "**/.git": true,
    "**/bower_components": true,
    "**/node_modules": true,
    "**/README.md": true,
    "**/tmp": true
  },
  "files.associations": {
    "*.json": "jsonc"
  },

  // prettier
  "prettier.configPath": "src/.prettierrc",

  // typescriptHero
  "typescriptHero.imports.organizeOnSave": true,
  "typescriptHero.imports.organizeSortsByFirstSpecifier": true,
  "typescriptHero.imports.grouping": ["Plains", "Modules", "Workspace", "Remaining"],

  // git
  "gitlens.views.searchAndCompare.files.compact": false,
  "git.mergeEditor": false,
  "workbench.editorAssociations": {
    "git-rebase-todo": "gitlens.rebase"
  },

  // error lens
  "errorLens.exclude": ["Unknown at rule @apply", "at-rule or selector expected"]
}
