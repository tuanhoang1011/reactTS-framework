{
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.jsonc",
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "trailingComma": "none",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "proseWrap": "always",
    "printWidth": 120,
    "singleAttributePerLine": true
}
